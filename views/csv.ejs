<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/assets/images/csv.png">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/assets/css/csv.css">
    <link rel="stylesheet" href="/assets/css/_header.css">
    <title><%= title %></title>
</head>

<body>
    <!-- Include header partial -->
    <%- include('_header') %>

    <h1><%= file.originalname %></h1>

    <!-- Search Bar -->
    <form action="/view/<%= file._id %>" method="get">
        <div class="search-bar">
            <input type="text" name="q" class="search-input" placeholder="Type anything to Search" value="<%= searchQuery || '' %>">
            <!-- Search Bar Icon -->
            <button type="submit"><i class="bi bi-search"></i></button>
        </div>
    </form>
<!-- Table to Show CSV Data -->
    <table class="table">
        <thead>
            <tr>
                <% for (let header of tableHeaders) { %>
                    <th><%= header %></th>
                <% } %>
            </tr>
        </thead>
        <tbody>
            <% for (let row of tableRows) { %>
                <tr>
                    <% for (let header of tableHeaders) { %>
                        <td><%= row[header] %></td>
                    <% } %>
                </tr>
            <% } %>
        </tbody>
    </table>

    <script src="/assets/js/_header.js"></script>
</body>

</html>
